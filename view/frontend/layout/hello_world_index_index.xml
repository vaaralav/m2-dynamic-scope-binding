<?xml version="1.0"?>
<page xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" layout="1column" xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd">
  <referenceBlock name="content">
    <block template="content.phtml" class="Vaaralav\HelloWorld\Block\Main" name="vaaralav_helloworld_block_main">
      <arguments>
        <argument name="jsLayout" xsi:type="array">
          <item name="types" xsi:type="array"/>
          <item name="components" xsi:type="array">
            <item name="sparta" xsi:type="array">
              <item name="component" xsi:type="string">Vaaralav_HelloWorld/example</item>
            </item>
            <item name="sparta2" xsi:type="array">
              <item name="component" xsi:type="string">Vaaralav_HelloWorld/js/view/sparta</item>
              <item name="config" xsi:type="array">
                <item name="foobar" xsi:type="string">Tsaijajaijai</item>
              </item>
              <item name="children" xsi:type="array">
                <item name="child_a" xsi:type="array">
                  <item name="component" xsi:type="string">uiComponent</item>
                  <item name="displayArea" xsi:type="string">child_a</item>
                  <item name="template" xsi:type="string">Vaaralav_HelloWorld/message</item>
                  <item name="config" xsi:type="array">
                    <item name="subject" xsi:type="string">My Title</item>
                    <item name="body" xsi:type="string">My Content</item>
                  </item>
                </item>
                <item name="child_b" xsi:type="array">
                  <item name="component" xsi:type="string">uiComponent</item>
                  <item name="displayArea" xsi:type="string">child_b</item>
                  <item name="template" xsi:type="string">Vaaralav_HelloWorld/message</item>
                  <item name="config" xsi:type="array">
                    <item name="subject" xsi:type="string">My Title B</item>
                    <item name="body" xsi:type="string">My Content B</item>
                  </item>
                </item>
              </item>
            </item>
            <item name="empty" xsi:type="array">
              <item name="component" xsi:type="string"></item>
            </item>
          </item>
        </argument>
      </arguments>
    </block>
  </referenceBlock>
</page>
